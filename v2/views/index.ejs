<% include partials/header %>
<div class="container" >
<header class="jumbotron">
    <div class="container" >
        <h1 class="display-4">Welcome To YelpCamp!</h1>
        <p class="lead">View our hand-picked compgrounds from all over the world</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
        </p>
    </div>
</header>

 <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6" style="display: flex; flex-wrap: wrap; margin: 1rem 0">
            <div class="card">
              <img class="card-img-top img-fluid" src="<%=campground.image %>" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title"><%= campground.name %></h5>
                <!--<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>-->
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-block btn-lg btn-outline-info">More Info</a>
              </div>
            </div>
        </div>
    <% }) %>
 </div>

</div>

<% include partials/footer %>
